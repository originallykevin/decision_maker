<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">


  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/voting.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>

</head>

<body id="polling-body">
  <form id="voter-name">
    <h2>Please Enter Your Name to Access Poll</h1>
    <div >
      <label class="form-label">Name:</label>
      <input type="name" name="name" class="form-control" id="voter-name">
    </div>
    <button class="btn btn-outline-success" type="submit" id="name-submit">Access Poll</button>
  </form>

  <section id="poll">
    <h1 class="vote-here">Vote Here</h1>
    <h1 class="title">Decision to be made: <%= title %>
    </h1>
    <h2 class="description">Description: <%= description %>
    </h2>
    <h2>Choices:</h2>
    <ul class="list-group" id="options">
      <% options.forEach(option=> { %>
        <li class="list-group-item" id="option-id">
          <%= option %>
        </li>
        <% }) %>
    </ul>
    <button id="poll-submit" class="btn btn-outline-success" type="submit">Submit Vote</button>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
      crossorigin="anonymous"></script>
  </section>
</body>

</html>
